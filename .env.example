# Baby SkyNet Environment Configuration
# Copy this file to .env and update the values

# Anthropic API (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# PostgreSQL Primary Database Configuration
# Enable PostgreSQL by providing all required connection details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=baby_skynet
POSTGRES_USER=claude
POSTGRES_PASSWORD=skynet2025

# PostgreSQL Connection Pool Settings (optional)
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_IDLE_TIMEOUT_MILLIS=30000
POSTGRES_CONNECTION_TIMEOUT_MILLIS=2000

# Neo4j Graph Database Configuration
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# ChromaDB Configuration
CHROMA_URL=http://localhost:8000

# SQLite Configuration (fallback if PostgreSQL is not configured)
SQLITE_DB_PATH=./claude_memory.db

# Container Management
# When using Podman containers, ensure these ports are correctly mapped:
# - PostgreSQL: 5432
# - ChromaDB: 8000  
# - Neo4j: 7474 (HTTP), 7687 (Bolt)
