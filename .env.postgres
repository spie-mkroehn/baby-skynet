# Baby SkyNet Environment Configuration - PostgreSQL Test Setup
# This is a test configuration for PostgreSQL integration

# Anthropic API (optional for this test)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# PostgreSQL Primary Database Configuration
# These values assume you have a PostgreSQL container running on localhost
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=baby_skynet
POSTGRES_USER=claude
POSTGRES_PASSWORD=skynet2025

# PostgreSQL Connection Pool Settings
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_IDLE_TIMEOUT_MILLIS=30000
POSTGRES_CONNECTION_TIMEOUT_MILLIS=2000

# Neo4j Graph Database Configuration (for full system)
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# ChromaDB Configuration (for full system)
CHROMA_URL=http://localhost:8000

# SQLite fallback (will be used if PostgreSQL config is incomplete)
SQLITE_DB_PATH=./claude_memory.db
